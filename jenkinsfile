pipeline {
    agent any

    tools {
        nodejs 'NodeJS'   // Make sure you have NodeJS configured under Jenkins â†’ Global Tool Configuration
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/kriti3003/DoomScroll.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing project dependencies...'
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ—ï¸ Building the project...'
                sh 'npm run build || echo "No build step defined"'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'npm test || echo "No tests found"'
            }
        }

        stage('Deploy (Demo)') {
            steps {
                echo 'ğŸš€ Deploying application (simulated)...'
                sh 'echo "Application deployed successfully!"'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and Deployment successful!'
        }
        failure {
            echo 'âŒ Build failed. Please check logs.'
        }
    }
}
